extends base

block content
    .container.mt-5.p-5.text-center
        h1.m-3.secondary Browse Mentors
        form.form-group.d-flex.width#searchWrapper
            input.form-control.me-2(type="search", placeholder="Search by Company-Name, Name, Domain", aria-label="Search")
            a.form-group.btn.mt-5.btn-success(type="submit") Search

    main.main.container 
        .row 
            .card-container
            each mentor in mentors
                .col-md-4.mt-5
                    .card
                        .card__header
                            .card__picture
                                .card__picture-overlay &nbsp;
                                img.card__picture-img(src=`/img/tours/${mentor.imageCover}`, alt=`${mentor.name}`)
                            h3.heading-tertirary
                                span= mentor.name
                        .card__details
                            h4.card__sub-heading= `${mentor.domain}`
                            p.card__text= mentor.summary
                        .card__footer
                            p
                                span.card__footer-value= `$500`
                                | 
                                span.card__footer-text per person
                            p.card__ratings
                                span.card__footer-value= mentor.ratingsAverage
                                | 
                                span.card__footer-text= `rating (${mentor.ratingsQuantity})`
                            a.btn.btn--green.btn--small(href=`/mentor/${mentor.slug}`) View Profile
